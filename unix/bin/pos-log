#!/bin/sh

server_prefix=/usr/local/protege.server
if [ -f /etc/default/protege ]
then
   . /etc/default/protege
   server_prefix=${PROTEGE_SERVER_PREFIX}
fi

cli_lib=${server_prefix}/lib/commons-cli.jar
owl_lib=${server_prefix}/bundles/org.semanticweb.owl.owlapi.jar
server_lib=${server_prefix}/bundles/org.protege.owl.server.jar
class=org.protege.owl.server.command.Log

debug=-agentlib:jdwp=transport=dt_socket,address=8100,server=y,suspend=y

java -Xmx1024M \
  -classpath ${cli_lib}:${owl_lib}:${server_lib} \
  ${class} $@
